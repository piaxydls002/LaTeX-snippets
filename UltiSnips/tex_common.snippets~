global !p

from util import *

endglobal


###############
# ENVIRONMENT #
###############

snippet beg "begin/end" bA
\begin{$1}
	${VISUAL}$0
\end{$1}
endsnippet


#############
# MATH MODE #
#############

snippet im "Inline Math" w
$${VISUAL}$1$$0
endsnippet

snippet dm "Display Math" w
\[
	${VISUAL}$1
\]$0
endsnippet

###############
# 0 PARAMETER #
###############

context "math()"
snippet "(l|c|v|d)\.\." "dots" riA
\\`!p snip.rv = match.group(1)`dots
endsnippet

###############
# 1 PARAMETER #
###############

## Superscripts and Subscripts ##

snippet ^^ "superscript" iA
^{$1}$0
endsnippet

snippet __ "subscript" iA
_{$1}$0
endsnippet

################
# Left/Right ~ #
################

# Parentheses
context "math()"
snippet lrr "round brackets" iA
( ${VISUAL}$1 ) $0
endsnippet

context "math()"
snippet lr( "Round brackets" iA
\left( ${VISUAL}$1 \right) $0
endsnippet
 
context "math()"
snippet lrR "Round brackets" iA
\left( ${VISUAL}$1 \right) $0
endsnippet

# Square Brackets
context "math()"
snippet lrs "square brackets" iA
[ ${VISUAL}$1 ] $0
endsnippet

context "math()"
snippet lr[ "Square brackets" iA
\left[ ${VISUAL}$1 \right] $0
endsnippet

context "math()"
snippet lrS "Square brackets" iA
\left[ ${VISUAL}$1 \right] $0
endsnippet

# Braces
context "math()"
snippet lrc "curly brackets" iA
\\{ ${VISUAL}$1 \\} $0
endsnippet

context "math()"
snippet lr{ "Curly brackets" iA
\left\\{ ${VISUAL}$1 \right\\} $0
endsnippet

context "math()"
snippet lrC "Curly brackets" iA
\left\\{ ${VISUAL}$1 \right\\} $0
endsnippet

# Other Brackets
context "math()"
snippet lra "angle brackets" iA
\langle ${VISUAL}$1 \rangle $0
endsnippet

context "math()"
snippet lr< "Angle brackets" iA
\left< ${VISUAL}$1 \right> $0
endsnippet

context "math()"
snippet lrA "Angle brackets" iA
\left< ${VISUAL}$1 \right> $0
endsnippet

context "math()"
snippet lrp "pipes" iA
| ${VISUAL}$1 | $0
endsnippet

context "math()"
snippet lr| "Pipes" iA
\left| ${VISUAL}$1 \right| $0
endsnippet

context "math()"
snippet lrP "Pipes" iA
\left| ${VISUAL}$1 \right| $0
endsnippet

context "math()"
snippet lrdp "double pipes" iA
\| ${VISUAL}$1 \| $0
endsnippet

context "math()"
snippet lr\| "Double Pipes" iA
\left\| ${VISUAL}$1 \right\| $0
endsnippet

context "math()"
snippet lrDp "Double Pipes" iA
\left\| ${VISUAL}$1 \right\| $0
endsnippet

context "math()"
snippet floor "floor" iA
\lfloor ${VISUAL}$1 \rfloor $0
endsnippet

context "math()"
snippet Floor "Floor" iA
\left\lfloor ${VISUAL}$1 \right\rfloor $0
endsnippet

context "math()"
snippet ceil "ceil" iA
\lceil ${VISUAL}$1 \rceil $0
endsnippet

context "math()"
snippet Ceil "Ceil" iA
\left\lceil ${VISUAL}$1 \right\rceil $0
endsnippet

