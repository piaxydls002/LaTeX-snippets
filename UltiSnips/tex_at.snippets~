global !p

from util import *

endglobal

#################
#################
## @ SNIPPETS  ##
#################
#################

###############
# 1 PARAMETER #
###############

context "math()"
snippet @sr "square root" iA
\sqrt{${VISUAL}$1}$0
endsnippet

context "math()"
snippet @nr "nth root" iA
\sqrt[$1]{${VISUAL}$2}$0
endsnippet

## Accents ##

context "math()"
snippet "@(hat|tilde|dot|ddot|bar|vec)" "accents" riA
\\`!p snip.rv = match.group(1)`{${VISUAL}$1}$0
endsnippet


## Mathematical Fonts ##
context "math()"
snippet @cal "caligraphic" iA
\mathcal{${VISUAL}$1}$0
endsnippet

context "math()"
snippet @frak "fraktur" iA
\mathfrak{${VISUAL}$1}$0
endsnippet

context "math()"
snippet @bb "blackboard bold" iA
\mathbb{${VISUAL}$1}$0
endsnippet


###############
# 2 PARAMETER #
###############

####################################
# Operators using Sub/Superscripts #
####################################

context "math()"
snippet "@(int|iint|iiint|idotsint|oint|sum|prod|coprod|cup|cap|bigcup|bigcap)" "int" riA
\\`!p snip.rv = match.group(1)`_{$1}^{$2} ${VISUAL}$0
endsnippet

snippet @lim "limit" iA
\lim_{${1:n} \to ${2:\infty}} $0
endsnippet






